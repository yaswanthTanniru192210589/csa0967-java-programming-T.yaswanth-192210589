import java.util.Scanner;
class wordsandsentences{
public static void main(String[] args){
Scanner reader=new Scanner(System.in);
String n;
int k=0,count=0;
while(k==0){
n=reader.nextLine();
int m=n.length();
for(int i=0;i<m;i++){
if(n[i]==" "){
count++;
}
if(n[i]=="0"){
k++;
}
}
}
System.out.println(count);
}
}
