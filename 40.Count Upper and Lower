import java.util.Scanner;
class upperandlower{
    public static void main(String[] args){
Scanner reader=new Scanner(System.in);
     String ch=reader.nextLine();
     int count=0,flag=0;
     String m=ch.toUpperCase();
       int n=ch.length();
       for(int i=0;i<n;i++){
           if(ch.charAt(i)==m.charAt(i)){
               count++;
           }else{
               flag++;
           }
       }
        System.out.println("no of uppercase: "+count);
        System.out.println("no of lowercase: "+flag);
    }
}
